#pragma once

CLASS(Snafu, Gametype)
    INIT(Snafu)
    {
        this.gametype_init(this, _("SNAFU"),"snafu","g_snafu",true,"","timelimit=30 pointlimit=30",_("Situation normal..."));
    }
    METHOD(Snafu, m_generate_mapinfo, void(Gametype this, string v))
    {
        if(v == "snafu_tadpole")
            MapInfo_Map_supportedGametypes |= this.m_flags;
    }
ENDCLASS(Snafu)
REGISTER_GAMETYPE(SNAFU, NEW(Snafu));
#define g_snafu IS_GAMETYPE(SNAFU)

